<Window x:Class="BFE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BFE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="274969.jpg"/>
    </Window.Background>
    <Grid>
        
        <StackPanel>
            <Button x:Name="exit" Height="38" Content="Выход" Margin="620,375,20,370" FontSize="20" Background="Chocolate" Click="exit_Click"></Button>
        </StackPanel>
        <StackPanel>
            <Button x:Name="enter" Height="38" Content="Вход" Margin="330, 100" FontSize="20" Background="Chocolate" Click="enter_Click"></Button>
        </StackPanel>
        <StackPanel>
            <Button x:Name="production" Height="38" Content="Продукция" Margin="330, 170" FontSize="20" Background="Chocolate" Click="production_Click"></Button>
        </StackPanel>
        <StackPanel>
            <Button x:Name="info" Height="38" Content="Информация" Margin="330, 240" FontSize="20" Background="Chocolate" Click="info_Click"></Button>
        </StackPanel>

    </Grid>
</Window>
